<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComposeActivity" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tweet"
        android:id="@id/btnCompose"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:onClick="onTweet" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@id/btnCancel"
        android:onClick="onCancel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@id/etTweet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@id/btnCompose"
        android:layout_below="@+id/ftScreenName"
        android:ems="10"
        android:gravity="top"
        android:hint="Type your tweet here"
        android:inputType="textMultiLine"
        android:onClick="onTweet" />

    <fragment
        android:id="@+id/ftScreenName"
        android:name="com.twitterapp.fragments.ScreenNameFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/btnCancel"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="18dp"
        tools:layout="@layout/fragment_screen_name" />

</RelativeLayout>